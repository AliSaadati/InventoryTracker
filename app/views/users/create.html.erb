<% @page_title = "Create User" %>
<div class="Create_User_Form">
	<h2>Log-In</h2>
	<%= form_for(:user, :url => {:action => 'verify_create'}) do |f| %>
	<tr>
		<th>Username</th>
		<td><%= f.text_field :username %></td>
	</tr>
	<tr>
		<th>Password</th>
		<td><%= f.text_field :password %></td>
	</tr>
	<tr>
		<th>Confirm password</th>
		<td><%= f.text_field :verify_pass %></td>
	</tr>
	<!-- Log In Button -->
	<%= submit_tag("Create User") %>
	<% end %>
</div>